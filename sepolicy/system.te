# Grant GPU access to system apps (e.g., PowerManagerService)
allow system_sever gpu_device:chr_file rw_file_perms;
allow system_sever diag_device:chr_file rw_file_perms;

# Grant access to Qualcomm MSM Interface (QMI) radio sockets to system apps
# (e.g., LocationManager)
allow system_sever qmux_radio_socket:sock_file create_file_perms;
allow system_sever qmux_radio_socket:dir rw_dir_perms;
